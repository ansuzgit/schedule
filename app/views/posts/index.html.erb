<div class = "main_container">
  <div class="information">
    <h2>スケジュール一覧</h2>
  </div>
  <table>
    <thead> 
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>更新日時</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
      </tr> 
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.start.strftime('%Y-%m-%d')  %></td>
          <td><%= post.finish.strftime('%Y-%m-%d')  %></td>
          <td>
          <% if post.all_day %>
            <strong>⚪︎<strong>
          <% end%>
          </td>
          <td><%= post.updated_at.strftime('%Y-%m-%d') %></td>
          <td><%= link_to "確認", post_path(post.id) %></td>
          <td><%= link_to "編集", edit_post_path(post.id) %></td>
          <td><%= link_to "削除", post , method: :delete , 
                                         data: {confirm: "本当に削除しますか？"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p><%= link_to "スケジュール新規登録", new_path %></p>
</div>
<%= render 'layouts/footer' %>
